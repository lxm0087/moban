/* pages/doctors/doctors.wxss */
@import "../templates/experts.wxss";
.topImg{width:100%;height:600rpx;}
.expert-check{width:160rpx;height:46rpx;background:#333;display:inline-block;font-size:24rpx;line-height:46rpx;color:#fff;border-radius:0;}
.expert-dis{width:160rpx;height:46rpx;background:#eee;display:inline-block;font-size:24rpx;line-height:46rpx;color:#666;border-radius:0;margin-left:6rpx;}
.expert-box{margin:30rpx auto;width:340rpx;}
.expert-container{width:96%;margin:auto;}
.flex-expert{width:354rpx;height:588rpx;font-size:0;text-align:center;}
.flex-expert image{width:100%;height:300rpx;}
.flex-expert text{font-size:24rpx;}
.doc-name{font-weight:blod;}
.henxian{width:60%;}
.henxian::after{
    content:'';
    background:url('http://www.nclaimei.com/images/expertfg.png')no-repeat center;
    display:block;
    height: 6rpx;
    margin:15rpx;
    background-size:180rpx 6rpx;
}
.shuoming{display:inline-block;width:90%;margin:10rpx auto 20rpx;text-align:left;}
.flex-expert button{
    width:140rpx;
    height:40rpx;
    border-radius:20rpx;
    display:inline-block;
    font-size:20rpx;
    line-height:2;
}
.border-box{
  width:100%;
  border:1px solid #eee;
  border-top:none;
  box-sizing:border-box;
  padding:20rpx 0;
}
.doc-detail{
  position:fixed;
  left:50%;
  top:50%;
  width:700rpx;
  height:880rpx;
  margin-left:-350rpx;
  margin-top:-500rpx;
  background:#fff;

}

.doc-detail text{
  font-size:20rpx;
}

.doc-detail-box{
  width:90%;
  margin:auto;
}

.headimg{
  width:130rpx;
  height:150rpx;
  display:block;
  margin:20rpx auto;

}

.doctorsName{
  font-size:25rpx !important;
  color:#000;
  line-height:70rpx;
  font-weight:700;
}

.close{
  position:absolute;
  top:24rpx;
  right:24rpx;
  width:30rpx;
  height:30rpx;
}

.part1{
  text-align:center;
}

.doctors-intor{
  border-top:2px solid #f0f0f0;
  border-bottom:2px solid #f0f0f0;
  height:130rpx;
  line-height:55rpx;
}

.tit1{
  margin-top:8rpx;
  color:#50aa8e;
  display:block;
}

.tit2{
  line-height:40rpx;
}

.tit2::after{
  content:'';
  border:1px solid #f9f9f9;
}

.intor-box{
  height:239rpx;
  line-height:55rpx;
}

.intor-box text:nth-child(1){
  line-height:72rpx;
  color:#50aa8e;
  display:block;
}

.intor-box text:nth-child(2){
  line-height:36rpx;
}
